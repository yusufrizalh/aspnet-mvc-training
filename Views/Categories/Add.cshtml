@model Category

@section pagetitle {
    Add Category
}

<form method="post" asp-controller="categories" asp-action="add">
    <div class="row mb-3">
        <div class="col-md-4">
            <label asp-for="CategoryName" class="fw-bold col-form-label"></label>
        </div>
        <div class="col-md-6">
            <input type="text" class="form-control" asp-for="CategoryName" />
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-md-8">
            <span class="text-danger" asp-validation-for="CategoryName"></span>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-md-4">
            <label asp-for="CategoryDescription" class="fw-bold col-form-label"></label>
        </div>
        <div class="col-md-6">
            <input type="text" class="form-control" asp-for="CategoryDescription" />
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-md-8">
            <span class="text-danger" asp-validation-for="CategoryDescription"></span>
        </div>
    </div>
    <div class="row mt-3 pt-3">
        <div class="col-md-4">
            <input type="submit" class="btn btn-primary" value="Create" />
        </div>
        <div class="col-md-6">
        </div>
    </div>
</form>